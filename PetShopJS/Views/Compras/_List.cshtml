@model IEnumerable<PetShopJS.Models.Compra>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desconto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Condicao.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Forma_Pagamento.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parcela.Id)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desconto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Condicao.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forma_Pagamento.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parcela.Id)
            </td>
            <td>
                <a href="#" class="btn btn-primary modal-link" title="Editar" data-action="Edit" data-parameter="@item.Id">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                <a href="#" class="btn btn-success modal-link" title="Detalhes" data-action="Details" data-parameter="@item.Id">
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                <a href="#" class="btn btn-danger modal-link" title="Deletar" data-action="Delete" data-parameter="@item.Id">
                    <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
            </td>
        </tr>
    }

</table>