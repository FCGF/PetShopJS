@model IEnumerable<PetShopJS.Models.Compra_Produto_Empresa>

@{
    ViewBag.Title = "Compra - Produto - Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Compra - Produto - Empresa</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-info modal-link" title="Criar"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Compra.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto_Empresa.Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorUnitario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Compra.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto_Empresa.Id)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-primary modal-link" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
            <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-success modal-link" title="Detalhes"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
            <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger modal-link" title="Deletar"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
        </td>
    </tr>
}

</table>
