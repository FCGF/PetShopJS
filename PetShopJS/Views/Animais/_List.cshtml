@model IEnumerable<PetShopJS.Models.Animal>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacoes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raca.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Raca.Nome)
            </td>
            <td>
                <a href="#" class="btn btn-primary modal-link" title="Editar" data-action="Edit" data-parameter="@item.Id"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                <a href="#" class="btn btn-success modal-link" title="Detalhes" data-action="Details" data-parameter="@item.Id"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                <a href="#" class="btn btn-danger modal-link" title="Deletar" data-action="Delete" data-parameter="@item.Id"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
            </td>
        </tr>
    }

</table>