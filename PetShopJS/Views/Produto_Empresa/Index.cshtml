@model IEnumerable<PetShopJS.Models.Produto_Empresa>

@{
    ViewBag.Title = "Produto - Empresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Produto - Empresa</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-info modal-link" title="Criar"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estoque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empresa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estoque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Nome)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-primary modal-link" title="Editar"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
            <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-success modal-link" title="Detalhes"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
            <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger modal-link" title="Deletar"><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></a>
        </td>
    </tr>
}

</table>
